<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RockPaperScissors">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:textAlignment="center"
        android:layout_marginTop="6pt"
        android:layout_marginBottom="10pt"
        android:text="Rock Paper Scissors" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player choose a button"
        android:textAlignment="center"
        android:textSize="12pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="544dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Computer"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="10pt"
                android:text="Computer"
                android:textAlignment="center"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/Player"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_marginBottom="10pt"
                android:text="Player"
                android:textAlignment="center"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="380dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCom"
                    android:layout_width="209dp"
                    android:layout_height="41dp"
                    android:text="Wait player"
                    android:textAlignment="center"
                    android:textSize="8pt" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="222dp"
                    android:layout_margin="15pt"
                    app:srcCompat="@drawable/scissor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnScissors"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scissor" />

                <ImageButton
                    android:id="@+id/btnRock"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rock" />

                <ImageButton
                    android:id="@+id/btnPaper"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/paper" />
            </LinearLayout>

        </TableRow>
        <Button
            android:id="@+id/btnBackToFirst"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.838" />

    </TableLayout>




</LinearLayout>